<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>{{blog_text}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>

   {{#if comments.length}}
  <div class="col-md-6 blogPost-list">
    <h3>Comments:</h3>

    {{#each comments as |comment|}}
      <div class="row mb-2">
      <div class="col-md-8">
        <p>{{comment.comment_text}}</p>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{comment.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

  <p>
    <button class="btn btn-primary">Add Comment</button>
  </p>
</div>
