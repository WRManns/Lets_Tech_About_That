<div class="text-center">
  <h2>{{title}}</h2>
  
  <div class = 'container display-flex'>
    <div class= 'blog-text d-flex'>
      <p class="text-justify">{{blog_text}}</p>
    </div>
  </div>
  <p class="font-italic">Created by {{user.name}} on {{format_date date_created}}</p>

   {{#if comments.length}}
  <div class="col-md-6 comment-list">
    <h6 class='d-flex justify-left'>Comments:</h6>
    <br>

    {{#each comments as |comment|}}
      <div class="row mb-2">
      <div class="col-md-8 comment-box">
        <p>{{comment.comment_text}}</p>
        <p class="font-italic font-weight-light">By: {{comment.user.name}} On: {{format_date comment.date_created}}</p>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

