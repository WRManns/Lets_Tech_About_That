<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>{{blog_text}}</p>
  <p class="font-italic font-weight-bold">Created by {{user.name}} on {{format_date date_created}}</p>

   {{#if comments.length}}
  <div class="col-md-6 comment-list">
    <h5 class='d-flex justify-left'>Comments:</h5>
    <br>

    {{#each comments as |comment|}}
      <div class="row mb-2">
      <div class="col-md-8">
        <p>{{comment.comment_text}}</p>
        <p class="font-italic font-weight-light">By: {{comment.user.name}} On: {{format_date comment.date_created}}</p>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

{{#if logged_in}}
<div class="row mt-4">
  <div class="col-md-6">
    <h3>Comment on this Post:</h3>

    <form class="form new-comment-form">
      
      <div class="form-group">
        <label for="comment-text">Comment:</label>
        <textarea class="form-input" id="comment-text" name="comment-text"></textarea>
      </div>

      <div class="form-group">
        <button type="submit" class="btn btn-primary">Sumbit Comment</button>
      </div>
    </form>
  </div>
</div>
{{/if}}
