<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>{{blog_text}}</p>
  <p class="font-italic font-weight-bold">Created by {{user.name}} on {{format_date date_created}}</p>

   {{#if comments.length}}
  <div class="col-md-6 blogPost-list">
    <h5 class='d-flex justify-left'>Comments:</h5>
    <br>

    {{#each comments as |comment|}}
      <div class="row mb-2">
      <div class="col-md-8">
        <p>{{comment.comment_text}}</p>
        <p class="font-italic font-weight-light">By: {{comment.user.name}} On: {{format_date comment.date_created}}</p>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

  <p>
    <button class="btn btn-primary">Add Comment</button>
  </p>
</div>
