<div class="text-center">
  <h2>{{title}}</h2>
  
  <div class = 'container display-flex'>
    <div class= 'blog-text d-flex'>
      <p class="text-justify">{{blog_text}}</p>
    </div>
  </div>
  <p class="font-italic">Created by {{user.name}} on {{format_date date_created}}</p>

   {{#if comments.length}}
   <br>
  <div class="col-md-6 comment-list">
    <h5 class='d-flex justify-left'>Comments:</h5>
    
    {{#each comments as |comment|}}
      <div class="card comment-card w-100">
        <div class="card-body">
          <p>{{comment.comment_text}}</p>
          <p class="card-subtitle mb-2 font-italic text-muted">By: {{comment.user.name}} On: {{format_date comment.date_created}}<p>
        </div>
      </div>
    {{/each}}

  </div>
  {{/if}}
</div>

{{#if logged_in}}


    <form class="form new-comment-form">
      
        <div class="form-group w-50 mb-4">
        <label class="form-label" for="comment-text">Comment on this Post:</label>
        <textarea class="form-control form-input" id="comment-text" rows="4" name="comment-text"></textarea>
      </div>

      <div class="form-group">
        <button type="submit" id="comment-btn" class="btn btn-primary btn-sm">Submit Comment</button>
      </div>
    </form>
  </div>
</div>
{{/if}}

<script src="/js/comment.js"></script>